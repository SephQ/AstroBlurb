  <p><%= 'Please enter your birth time and location:' %></p>
  <%= form_with method: :get do |f| %>
    <%= f.label 'Birth Time' %>
    <%= f.datetime_local_field :birth_time, value: @date_search %><br>
    <%= f.label :birth_city %>
    <%= text_field_tag(:birth_city, @birth_city, default: @birth_city, size: 50) %>
    <p><%= f.submit "Blurb me!" %></p>
  <% end %>